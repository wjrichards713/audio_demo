<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="7dp"
    android:gravity="center_vertical"
    android:background="@drawable/section_background"
    android:backgroundTint="#C6F8C8"
    android:padding="5dp">

    <!-- Channel Name -->
    <TextView
        android:id="@+id/tvChannelName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Channel 555"
        android:gravity="center_vertical"
        android:lines="2"
        android:ellipsize="end"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <!-- Volume Slider -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:layout_marginTop="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vol"
            android:textSize="12sp"
            android:textColor="@android:color/black" />

        <SeekBar
            android:id="@+id/seekBarVolume"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="100"
            android:progress="100"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" />
    </LinearLayout>

    <!-- Speaker Select: L / C / R -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">

        <Button
            android:id="@+id/btnSpeakerLeft"
            android:layout_width="56dp"
            android:layout_height="36dp"
            android:text="L"
            android:textSize="13sp"
            android:textAllCaps="false"
            android:backgroundTint="#BDBDBD"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:padding="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp" />

        <Button
            android:id="@+id/btnSpeakerCenter"
            android:layout_width="56dp"
            android:layout_height="36dp"
            android:text="C"
            android:textSize="13sp"
            android:textAllCaps="false"
            android:backgroundTint="#4CAF50"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:padding="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp" />

        <Button
            android:id="@+id/btnSpeakerRight"
            android:layout_width="56dp"
            android:layout_height="36dp"
            android:text="R"
            android:textSize="13sp"
            android:textAllCaps="false"
            android:backgroundTint="#BDBDBD"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:padding="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:orientation="horizontal">
        <!-- Connect Button -->
        <Button
            android:id="@+id/btnConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect"
            android:textAllCaps="false"
            android:backgroundTint="#3F51B5" />

        <!-- Start Audio Button -->
        <Button
            android:id="@+id/btnStartAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Start Audio"
            android:textAllCaps="false"
            android:backgroundTint="#4CAF50" />

        <!-- Remove Button -->
        <Button
            android:id="@+id/btnRemove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Remove"
            android:textAllCaps="false"
            android:backgroundTint="#F44336" />
    </LinearLayout>


</LinearLayout>
